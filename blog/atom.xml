---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>{{ site.name }}</title>
  <link href="{{ site.url }}"/>
  <link type="application/atom+xml" rel="self" href="{{ site.url }}blog/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}</id>
  <author>
    <name>{{ site.name }}</name>
    <uri>{{ site.url }}</uri>
  </author>

  {% for post in site.posts limit:10 %}
  <entry>
    <id>{{ site.url }}{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="{{ site.url }}{{ post.url | remove_first: '/'}}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>{{ site.name }}</name>
      <uri>{{ site.url }}</uri>
    </author>
    <content type="html">
      {{ post.content | excerpt | xml_escape }}
      {% if post.content | has_excerpt %}&lt;p&gt;&lt;a href="{{ site.url }}{{ post.url | remove_first: '/'}}"&gt;Read moreâ€¦&lt;/a&gt;&lt;/p&gt;{% endif %}
    </content>
  </entry>
  {% endfor %}
 
</feed>
